{
  "name": "astro-awaited",
  "version": "0.0.42",
  "type": "module",
  "types": "dist/index.d.ts",
  "description": "An Astro integration that enables you to render fallback placeholders while server-side data is being fetched",
  "main": ".src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./setup": {
      "default": "./dist/setup/index.js"
    }
  },
  "files": [
    "dist",
    "src/index.ts",
    "src/typings",
    "src/components"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest"
  },
  "keywords": [
    "astro",
    "astro-awaited",
    "astro-integration",
    "astro-component",
    "astro-placeholder",
    "astro-fallback",
    "ui",
    "performance",
    "optimization",
    "awaited"
  ],
  "author": "Matheus Bronca",
  "license": "MIT",
  "peerDependencies": {
    "astro": ">=4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "astro": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
