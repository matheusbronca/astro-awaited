---

import { Awaited, Fallback }  from 'astro-awaited';
import Layout from '../components/Layout.astro';
import ResultsList from '../components/ResultsList.astro';
import ResultListPlaceholder from '../components/ResultListPlaceholder.astro';

export const prerender = false

const searchQuery = "astro integration";
const searchPage = 1;
---
<Layout>
	<h1>Astro Integration Test</h1>
	<p>This page tests the Awaited/Fallback integration functionality.</p>
	
	<h2>Testing Awaited/Fallback Integration</h2>
	<p>The Fallback component below should automatically receive a <code>slot="fallback"</code> attribute:</p>
	
	<div class="test-section">
		<Awaited>
			<ResultsList query={searchQuery} page={searchPage} />
			<Fallback>
				<ResultListPlaceholder />	
			</Fallback>
		</Awaited>
	</div>
</Layout>

